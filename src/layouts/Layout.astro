---
import '../../src/styles/globals.css';

import Header from '../components/Header.astro';

import UploadThingSSR from '../components/uploadthing-ssr.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="robots" content="noindex, nofollow" />
        <title>{title}</title>
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&family=Qwitcher+Grypen&display=swap" rel="stylesheet" />
    </head>
    <body class="antialiased text-[#714533] bg-[#f2eee9]">
        <UploadThingSSR />
        <div class="flex flex-col min-h-screen px-6 sm:px-12">
            <div class="flex flex-col w-full max-w-5xl mx-auto">
                <Header />
                <main><slot /></main>
            </div>
        </div>
    </body>
</html>
